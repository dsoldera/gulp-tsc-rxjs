{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "removeComments": true,
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "target": "es2015",
        "allowJs": true
    },
    "files": [
        "src/app.ts"
    ],
    "include": [
        "src/**/*"
    ],
	"exclude": [
        "node_modules"
    ]
}